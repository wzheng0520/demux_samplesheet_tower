{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/./master/nextflow_schema.json",
    "title": ". pipeline parameters",
    "description": "",
    "type": "object",
    "definitions": {
        "input": {
            "title": "Input",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "library": {
                    "type": "string",
                    "description": "Location to library QC and pooling",
                    "help_text": "Currently, the pipeline can only process input library information files in a fixed format. Please refer to this resource when uploading the input library information files. See [usage docs] (https://altoslabs.benchling.com/altoslabs/templates/tmpl_phYDaocW)"
                },
                "indexs": {
                    "type": "string",
                    "description": "Location of index plates",
                    "help_text": "Currently, the pipeline is only capable of handling index plates that are included in the list available at the following link. Please consult this resource when selecting the appropriate index for your needs. See [usage docs] (https://github.com/wzheng0520/demux_samplesheet_tower/tree/updating/index)"
                },
                "eln": {
                    "type": "string",
                    "description": "Experimenet Benchling ID"
                },
                "seq": {
                    "type": "string",
                    "description": "Sequencer type",
                    "enum": [
                        "Novaseq",
                        "Nextseq",
                        "Miseq"
                    ]
                },
                "override": {
                    "type": "string",
                    "description": "Override cycle"
                },
                "seqonly": {
                    "type": "string",
                    "description": "Sequencing only or not",
                    "enum": [
                        "yes",
                        "no"
                    ]
                },
                 "type": {
                    "type": "string",
                    "description": "Type of library",
                    "enum": [
                        "illumina",
                        "10x",
                        "neb"
                    ]
                }
            }
        },
        "output": {
            "title": "Output",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "output": {
                    "type": "string",
                    "description": "Location to store output files"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input"
        },
        {
            "$ref": "#/definitions/output"
        }
    ]
}